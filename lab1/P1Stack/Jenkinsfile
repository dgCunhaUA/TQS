pipeline {
        agent any
        tools {
            jdk 'jdk8'
            maven 'Mvn1'   
        } 
        stages {       
            stage('test java installation') {
                steps {  
                    dir('your-sub-directory'){
                        sh "$PWD"           
                    }
                } 
                steps {               
                    sh 'java -version'                        
                }       
            } 
            stage('test maven installation') {
                teps {  
                    dir('your-sub-directory'){
                        sh "$PWD"           
                    }
                } 
                steps { 
                    sh 'mvn -version'                      
                }      
            }  
        }
    }